<center>
    <h1>Welcome to Movie Review App</h1>
</center>
<div class="container">
    <div class="row">
        <%= link_to 'Add A New Movie', new_movie_path %>
        <% m = Movie.all %>
        <% if m.length == 0 %>
	        <br><em>No movies found!</em>
	    <% else %>
            <table class="table table-striped table-bordered">
              <tr>
            	<th>Thumbnail</th>
                <th>Movie Title</th>
                <th>Year</th>
            	<th>IMDB Rating</th>
            	<th>Description</th>
            	<th colspan=3>Actions</th>
              </tr>
             
              <% @movies.each do |movie| %>
                <tr>
            	  <td><%= image_tag("#{movie.id}.jpg", :alt => "No Image") %></td>
            	  <td><%= movie.title %></td>
                  <td><%= movie.year %></td>
            	  <td><%= movie.imdb %></td>
            	  <td><%= movie.description %></td>
            	  <td><%= link_to 'Show Details', movie_path(movie) %></td>
                  <td><%= link_to 'Edit Information', edit_movie_path(movie) %></td>
            	  <td><%= link_to 'Remove', movie_path(movie),
                          method: :delete,
                          data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </table>
        <% end %>
    </div>
</div>